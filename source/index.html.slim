- content_for(:head)
  == dato_meta_tags(dato.homepage)

.hero--home
  .hero__background

.wrap
  section
    .card--horizontal
      - about_image_url = dato.about.featured_image.url(w: 680, h: 500, fit: 'crop')
      .card__item--image style="background-image: url('#{about_image_url}')"
      .card__item--text
        .card__content
          .card__content__kicker Scopri di pi√π
          h6.card__content__title.with-gradient Associazione Gruppo Luce Nera
          .align--center= link_to "Chi siamo", "/chi-siamo", class: "button card__content__button"


  .space--bottom-6

  section
    h5.section__title I prossimi eventi
    .space--bottom-6

    .grid--center
      - dato.events.each_with_index do |event, i|
        - if i < 3
          .grid__item.lap-6-12
            = partial "partials/event-card", locals: {event: event, index: i}

= partial "partials/cta"
